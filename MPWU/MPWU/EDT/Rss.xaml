<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MPWU.EDT.Rss">
	<ContentPage.Content>
		<StackLayout x:Name="ParamToShow" Orientation="Vertical" VerticalOptions="CenterAndExpand">
            <Label Text="Temps de prÃ©paration">
	            <Label.FontFamily>
			        <OnPlatform x:TypeArguments="x:String">
			            <OnPlatform.iOS>baloo</OnPlatform.iOS>
			            <OnPlatform.Android>baloo.ttf#baloo</OnPlatform.Android>
					</OnPlatform>
		    	</Label.FontFamily>
			</Label>
            <TimePicker x:Name="PrepTime" Time="{Binding PrepTime, Mode=TwoWay}"/>
            <Label Text="Lien du flux RSS">
            	<Label.FontFamily>
			        <OnPlatform x:TypeArguments="x:String">
			            <OnPlatform.iOS>baloo</OnPlatform.iOS>
			            <OnPlatform.Android>baloo.ttf#baloo</OnPlatform.Android>
					</OnPlatform>
		    	</Label.FontFamily>
			</Label>
			<Entry x:Name="UrlRss" Text="{Binding UrlRss, Mode=TwoWay}">
				<Entry.FontFamily>
			        <OnPlatform x:TypeArguments="x:String">
			            <OnPlatform.iOS>baloo</OnPlatform.iOS>
			            <OnPlatform.Android>baloo.ttf#baloo</OnPlatform.Android>
					</OnPlatform>
		    	</Entry.FontFamily>
			</Entry>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
